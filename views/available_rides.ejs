    <div class="details">
    <%if(details!=null) { %>
    <h1 style="text-align: center; font-size: 25px;">AVAILABLE RIDES</h1>
    <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Gender</th>
            <th>From</th>
            <th>To</th>
            <th>Bike</th>
            <th>Date</th>
            <th>Charge</th>
            <th>Action</th>
        </tr>
        </thead>
        <% var i=1; details.forEach(item => { %>
        <tr>
          <td><%=i++%></td>
          <form action="/riderdetails" method="POST">
            <td><input name="rider_name" style="border:0px; text-align: center; outline: none; width:100%;" value=<%= item.user_name%> readonly></td>
            <td><%= item.email%></td>
            <td><input name="rider_phone" style="border:0px; outline: none; text-align: center; width:100%" value=<%= item.phone%> readonly></td>
            <td><input name="rider_gender" style="border:0px; outline: none; text-align: center; width:100%" value=<%= item.gender%> readonly></td>
            <td><%= item.from%></td>
            <td><%= item.dest%></td>
            <td><input name="rider_bike" style="border:0px; outline: none; text-align: center; width:100%" value=<%= item.bike%> readonly></td>
            <td><input name="date" style="border: 0px; outline: none; text-align: center; width:100%" value=<%= item.date%> readonly></td>
            <td><input name="user_name" style="border:0px; outline: none; text-align: center; width:100%" value=<%= item.sal%> readonly></td>
            <td><input type="submit" value="Book"></td>
          </form>
        </tr>
        <% }) %>
        </table>
        <% }
        if(details==[]){ %>
          <h1>No Data Found</h1>
        <%}%>
