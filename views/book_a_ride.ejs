        .footer-col h4{
        font-size: 18px;
        color: #ffffff;
        margin-bottom: 35px;
        font-weight: 500;
        position: relative;
        }
        .footer-col p{
        color: #fff;
        }
        .footer-col h4::before{
        content: '';
        position: absolute;
        left:0;
        bottom: -10px;
        background-color: #e91e63;
        height: 2px;
        box-sizing: border-box;
